{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">{{ message }}</div>
{% endfor %}

<section class="row articles justify-content-center">
<h1 class="display-3 my-5 fw-bold">Nos véhicules</h1>
{% for vehicule in tabVehicules %}

    <article class="card col-3 mx-3 text-center border border-dark my-3 p-3">
        <h2>{{ vehicule.titre }}</h2>
        <div class="metadata">{{ vehicule.marque }} - {{ vehicule.modele }}</div>
        <div class="content" style="min-height:310px;">
            <img src="{{ vehicule.photo }}" alt="" class="img-fluid max-width:100%;">
            <p>{{ vehicule.description|slice(0,128)|raw }}</p>
            
        </div><a href="{{ path('app_show', {id:vehicule.id}) }}" class="btn btn-primary stretched-link">Détail</a>
    </article>

{% endfor %}
</section>

{% endblock %}
